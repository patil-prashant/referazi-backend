<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="apis.mapper.UserMapper">
    <resultMap id="UserResultMap" type="apis.models.User">
        <id column="id" property="id" />
        <result column="username" property="name" />
        <result column="email" property="email" />
        <result column="password" property="password" />
    </resultMap>
    <select id="findAllUsers" resultMap="UserResultMap">
        select id, username, email from user
    </select>
    <select id="findUserById" resultMap="UserResultMap">
        select id, username, email from user WHERE id=#{id}
    </select>
    <select id="findUserByEmail" resultMap="UserResultMap">
        select id, username, email from user WHERE email=#{email}
    </select>
    <select id="getPassword" resultType="string">
        select password from user WHERE email=#{email}
    </select>
    <insert id="insertUser" parameterType="apis.models.User" useGeneratedKeys="true" keyProperty="id">
        insert into user(username,email,password) values(#{name},#{email},#{password})
    </insert>
</mapper>