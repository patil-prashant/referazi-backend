<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.referazi.dao.MessageDao">

    <resultMap id="messageResultMap" type="com.referazi.models.Message">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="description" property="description" />
    </resultMap>

    <select id="getMessages" resultMap="messageResultMap">
        select * from message
    </select>

    <insert id="insertMessage" parameterType="com.referazi.models.Message" useGeneratedKeys="true" keyProperty="id">
        insert into message(title, description) values(#{title}, #{description})
    </insert>

</mapper>
